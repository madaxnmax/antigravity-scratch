    public async Task<bool> ErrorHandling()
    {
        decimal sandedThickness = Convert.ToDecimal(washerQuote.SandedThickness);

        var validationMessages = new List<string>();
        if (string.IsNullOrEmpty(selectedGrade))
        {
            validationMessages.Add("- Grade");
        }
        if (string.IsNullOrEmpty(selectedThickness))
        {
            validationMessages.Add("- Thickness");
        }
        if (string.IsNullOrEmpty(selectedColor))
        {
            validationMessages.Add("- Color");
        }
        if (string.IsNullOrEmpty(selectedSize))
        {
            validationMessages.Add("- Size");
        }
        if (string.IsNullOrEmpty(Customer))
        {
            validationMessages.Add("- Customer");
        }
        if (string.IsNullOrEmpty(washerQuote.Quantity))
        {
            validationMessages.Add("- Quantity");
        }
        // if (washerQuote.ID <= 0)
        // {
        //     validationMessages.Add("- ID");
        // }
        if (washerQuote.OD <= 0)
        {
            validationMessages.Add("- OD");
        }
        if(washerQuote.Thickness <= .005)
        {
            validationMessages.Add("- Thickness to low. Manual calcualtion required.");
        }
        if (sandedThickness > 0 && sandedThickness > (decimal)washerQuote.Thickness)
        {
            validationMessages.Add("- Sanded Thickness Larger Than Sheet");
        }        
        else
        {
            if(!string.IsNullOrEmpty(washerQuote.Quantity))
            {
                try
                {
                    var quantities = washerQuote.Quantity.Split(new[] { ',' }, StringSplitOptions.RemoveEmptyEntries);
                    foreach (var q in quantities)
                    {
                        if (!int.TryParse(q, out int qty))
                        {
                            validationMessages.Add($"- Quantity '{q}' must be a number");
                            isLoading = false;
                            break;
                        }
                    }
                }
                catch (Exception ex)
                {
                    validationMessages.Add($"- Quantity is required. Format: 10,100,500");
                }
            }
            else
            {
                validationMessages.Add($"- Quantity is required. Format: 10,100,500");

            }

        }
        // Check if there are any missing fields
        if (validationMessages.Any())
        {
            // Construct the alert message
            string alertMessage = "Please complete the following fields before proceeding:\n" + string.Join("\n", validationMessages);
            // Display the alert to the user
            await JSRuntime.InvokeVoidAsync("alert", alertMessage);
            // Exit the method to prevent further execution
            return true;
        }

        return false;
    }
    private async Task AddToQuote()
    {
        isLoading = true;
        StateHasChanged();

        // Clear any existing pricing to avoid duplicates
        washerQuote.Pricing.Clear();

        washerQuote.SheetSize = selectedSize;
        washerQuote.Grade = selectedGrade;
        washerQuote.Thickness = double.Parse(selectedThickness, CultureInfo.InvariantCulture);
        washerQuote.Color = selectedColor;
        washerQuote.Size = selectedSize;

        var errors = await ErrorHandling();
        if (errors)
        {
            isLoading = false;
            return;
        }
        else
        {
            var quantities = washerQuote.Quantity.Split(new[] { ',' }, StringSplitOptions.RemoveEmptyEntries);

            foreach (var q in quantities)
            {
                if (int.TryParse(q.Trim(), out int quantity))
                {
                    var newWasher = new WasherQuote
                    {
                        SheetSize = washerQuote.SheetSize,
                        Grade = washerQuote.Grade,
                        Thickness = washerQuote.Thickness,
                        Color = washerQuote.Color,
                        Size = washerQuote.Size,
                            Quantity = q,
                        Comments = washerQuote.Comments,
                        SandedSides = washerQuote.SandedSides,
                        ThickMinus = washerQuote.ThickMinus,
                        ThickPlus = washerQuote.ThickPlus,
                        SandedThickness = washerQuote.SandedThickness,
                        ODMinus = washerQuote.ODMinus,
                        ODPlus = washerQuote.ODPlus,
                        OD = washerQuote.OD,
                        IDMinus = washerQuote.IDMinus,
                        IDPlus = washerQuote.IDPlus,
                        ID = washerQuote.ID,
                    };


                    LengthWidth lw = new LengthWidth();
                    var sizes = lw.GetLengthWidthFromCombinedSize(selectedSize);
                    var itemNum = BCItemAttributes
                        .Where(attr => attr.NEMAGrade == selectedGrade
                                       && attr.Thicknesses == selectedThickness
                                       && Convert.ToInt32(attr.LengthIn) == sizes.Length
                                       && Convert.ToInt32(attr.WidthIn) == sizes.Width
                                       && attr.Color == selectedColor
                                       && !attr.ItemNumber.EndsWith("D"))
                        .FirstOrDefault();
                    newWasher.QuantityRequested = quantity;
                    newWasher.ItemNo = itemNum.ItemNumber;
                    newWasher.Quantity = q;


                    try
                    {
                        // Step 1: Calculate panel yield (items per panel)
                        //This is actually calculating Sheet Yeild
                        // int itemsPerPanel = _helper.CalculatePanelYield(washerQuote);
                        string panelSize = _helper.GetPanelSizeFromSheetSize(selectedSize, newWasher, int.Parse(q)); // Helper to determine actual panel size
                        newWasher.PanelSize = panelSize;
                        int itemsPerPanel = _helper.CalculatePanelYield(newWasher, panelSize);

                        int itemsPerSheet = _helper.CalculateSheetYield(newWasher);

                        // Step 1b: Calculate how many panels fit within one full sheet
                        int panelsPerFullSheet = _helper.CalculatePanelsPerFullSheet(newWasher);

                        // Step 1c: Calculate how many items fit in each full sheet
                        //int itemsPerFullSheet = itemsPerPanel * panelsPerFullSheet;

                        // Step 2: Calculate the number of full sheets needed
                        int fullSheetsNeeded = (int)Math.Ceiling((double)quantity / itemsPerSheet);
                        // Step 3: Calculate total panels used
                        int totalPanelsUsed = (int)Math.Ceiling((double)quantity / itemsPerPanel);


                        // Retrieve the base price per full sheet
                        var quantityPricing = await bCItemTransformation.CalculatePricingForQuantitySimple(fullSheetsNeeded, newWasher.ItemNo, Customer);
                        decimal basePricePerFullSheet = quantityPricing.PricePerItem;

                        var priceperpanel = basePricePerFullSheet / panelsPerFullSheet;
                        var priceperpanel2 = priceperpanel * totalPanelsUsed;

                        // Step 4: Calculate total material cost based on the number of full sheets
                        decimal materialCost = basePricePerFullSheet * fullSheetsNeeded;
                        materialCost = priceperpanel2;

                        double newThickness;

                        // Check if SandedThickness has a valid value and use it, otherwise fallback to Thickness
                        newThickness = double.TryParse(newWasher.SandedThickness, out double sandedThicknessValue) && sandedThicknessValue > 0
                            ? sandedThicknessValue
                            : newWasher.Thickness;

                        // Calculate panel size and determine machine type based on thickness and panel size
                        bool useRouter = _helper.IsRouterRequired(newThickness, panelSize); // Updated logic for machine selection
                        HashSet<string> Phenolic = new HashSet<string> { "L","LE","C","CE","XX","XXX" };
                        bool useMilling = true;
                        if (Phenolic.Contains(newWasher.Grade) && useRouter == true)
                        {
                            useMilling = false;
                        }
                        if(useRouter)
                        {
                            newWasher.MachineType = "Router";
                        }
                        else
                        {
                            newWasher.MachineType = "Excellon";
                        }
                    // Step 5: Calculate labor cost based on the machine type
                        var machineData = useRouter
                            ? _helper.CalculateRouterLaborCost(newWasher, totalPanelsUsed, isMilling: useMilling)
                            : _helper.CalculateExcellonLaborCost(newWasher, totalPanelsUsed);
                        decimal laborCost = machineData.totalcost;

                        // Step 6: Calculate sanding cost if required, based on panels used
                        decimal sandingCost = 0;
                        if (!string.IsNullOrEmpty(newWasher.SandedThickness))
                        {
                            decimal sandedThickness = Convert.ToDecimal(newWasher.SandedThickness);
                            if (sandedThickness > 0 && sandedThickness < (decimal)newWasher.Thickness)
                            {
                                // Calculate sanding cost per panel and multiply by total panels used
                                sandingCost = _helper.CalculateSandingCost(newWasher, totalPanelsUsed);
                            }
                            else
                            {
                                string alertMessage = "Sanded Thickness is greater than or equal to Thickness.";
                                await JSRuntime.InvokeVoidAsync("alert", alertMessage);
                                break;
                            }
                        }

                        // Step 7: Calculate the cutting charge based on the number of sheets needed
                        decimal cuttingCharge = CuttingCharge * fullSheetsNeeded;

                        // Step 8: Calculate total price per item
                        decimal totalCost = materialCost + laborCost + sandingCost + cuttingCharge + machineData.margin;
                        decimal minimumOrder = 500;
                        decimal pricePerItem = Math.Max(totalCost, minimumOrder) / quantity;

                        int PanelWidthVal = 0, PanelLengthVal = 0;
                        try
                        {
                            string[] dimensions = panelSize.Split('x');
                            if (dimensions.Length != 2)
                                throw new FormatException("Expected format 'width.xlength'");

                            PanelWidthVal = (int)double.Parse(dimensions[0]); // Parse width to double, cast to int
                            PanelLengthVal = (int)double.Parse(dimensions[1]); // Parse length to double, cast to int

                            Console.WriteLine($"PanelWidth: {PanelWidthVal}");  // Output: PanelWidth: 18
                            Console.WriteLine($"PanelLength: {PanelLengthVal}"); // Output: PanelLength: 24
                        }
                        catch (FormatException)
                        {
                            Console.WriteLine("Invalid format. Expected 'width.xlength' (e.g., '18.00x24.00')");
                        }
                        catch (Exception ex)
                        {
                            Console.WriteLine($"Error parsing panelSize: {ex.Message}");
                        }
                        // Create a new QuantityPricing entry with the calculated price
                        var pricing = new WasherQuantityPricing(quantity, pricePerItem)
                            {
                                PanelsUsed = totalPanelsUsed,
                                SandingTotal = sandingCost,
                                DiscountPercentage = quantityPricing.DiscountPercentage,
                                MaterialCost = materialCost,
                                PanelSize = panelSize,
                                MachineCost = laborCost,
                                SheetCost = basePricePerFullSheet,
                                TotalPanels = totalPanelsUsed,
                                TotalSheets = fullSheetsNeeded,
                                PanelYield = itemsPerPanel,
                                CutCharge = cuttingCharge,
                                Margin = machineData.margin,
                                PanelsPerFullSheet = panelsPerFullSheet,
                                PanelLength = PanelLengthVal,
                                PanelWidth = PanelWidthVal
                            };
                        newWasher.Pricing.Add(pricing);
                        await WasherOnAdd.InvokeAsync(newWasher);

                    }
                    catch (Exception ex)
                    {
                        await JSRuntime.InvokeVoidAsync("alert", "Something went wrong. Please try again.");
                        isLoading = false;
                        StateHasChanged();
                        break;
                    }
                }

            }
            ResetOptions();
        }
    }




     
    private async Task HandleGradeChange(ChangeEventArgs e)
    {
        selectedGrade = e.Value.ToString();
        //thicknesses = await MaterialService.GetThicknessesByGradeAsync(selectedGrade);
        thicknesses = BCItemAttributes
            .Where(attr => attr.NEMAGrade == selectedGrade && attr.Thicknesses != null)
            .Select(attr => attr.Thicknesses)
            .Distinct()
       .OrderBy(thickness => decimal.Parse(thickness, CultureInfo.InvariantCulture))
            .ToList();
        selectedThickness = ""; // Reset thickness selection
        colors.Clear(); // Reset colors as well
    }

    private async Task HandleOverrideChange(FocusEventArgs e)
    {
        var sku = "";//washerQuote.OverrideSku;
        var result = BCItemAttributes.Where(x => x.ItemNumber == sku).ToList();
        if (result.Count > 0)
        {
            selectedGrade = result.Select(x => x.NEMAGrade).FirstOrDefault();
            selectedThickness = result.Select(x => x.Thicknesses).FirstOrDefault().ToString();


            thicknesses.Clear();
            thicknesses = result.Select(x => x.Thicknesses).ToList(); //await MaterialService.GetThicknessesByGradeAsync(selectedGrade);
            sizes.Clear();
            sizes = result
    .Select(x => $"{x.LengthIn}x{x.WidthIn}") // Format each element as "LxW"
    .Distinct() // Ensure each "LxW" format is unique
    .ToList(); // Convert to List<string>

            selectedSize = sizes.FirstOrDefault();
            colors.Clear();
            colors = result.Select(x => x.Color).Distinct().ToList();
            selectedColor = colors.FirstOrDefault();

            washerQuote.Grade = selectedGrade;
            washerQuote.Thickness = double.Parse(selectedThickness, CultureInfo.InvariantCulture);
            washerQuote.Color = selectedColor;
            washerQuote.Size = selectedSize;
        }
    }
    private async Task HandleThicknessChange(ChangeEventArgs e)
    {
        selectedThickness = e.Value?.ToString();
        // Filter items based on the selected grade and thickness.
        var filteredItems = BCItemAttributes
            .Where(attr => attr.NEMAGrade == selectedGrade && attr.Thicknesses == selectedThickness)
            .ToList();

        // Construct the size string from WidthIn and LengthIn, and collect distinct values.
        sizes = filteredItems
          .Where(item => Convert.ToInt32(item.WidthIn) > 0 && Convert.ToInt32(item.LengthIn) > 0)
         .Select(item => $"{item.LengthIn}x{item.WidthIn}") // Create the "Width x Length" string
           .Distinct() // Remove duplicates
           .OrderBy(size => size) // Optionally order the sizes
           .ToList();

    }

    private async Task HandleSizeChange(ChangeEventArgs e)
