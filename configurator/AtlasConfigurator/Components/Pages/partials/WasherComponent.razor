        <div class="mb-2 grid grid-cols-3 gap-2">
            <!-- Grade Dropdown --> 
            <select class="border p-2 dark:bg-gray-700 dark:text-white dark:border-gray-600"
            value="@selectedGrade" @onchange="HandleGradeChange">
                <option value="">Grade</option>
                @foreach (var grade in grades)
                {
                    <option value="@grade">@grade</option>
                }
            </select>

            <!-- Thickness Dropdown -->
            <select class="border p-2 dark:bg-gray-700 dark:text-white dark:border-gray-600"
            value="@selectedThickness" @onchange="HandleThicknessChange">
                <option value="0.000">Thickness</option>
                @if (thicknesses != null)
                {
                    @foreach (var thickness in thicknesses)
                    {
                        <option value="@thickness">@thickness</option>
                    }
                }

            </select>
            <!-- Size Dropdown -->
            <select class="border p-2 dark:bg-gray-700 dark:text-white dark:border-gray-600"
            value="@washerQuote.Size" @onchange="HandleSizeChange">
                <option value="0">Size</option>
                @foreach (var size in sizes)
                {
                    <option value="@size">@size</option>
                }
            </select>
            <!-- Color Dropdown -->
            <select class="border p-2 dark:bg-gray-700 dark:text-white dark:border-gray-600"
            value="@washerQuote.Color" @onchange="HandleColorChange">
                <option value="">Select Color</option>
                @foreach (var color in colors)
                {
                    <option value="@color">@color</option>
                }
            </select>
        </div>

