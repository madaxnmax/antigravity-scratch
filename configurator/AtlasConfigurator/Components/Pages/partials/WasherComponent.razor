                <input id="sheetThickness" type="number" min="0" class="w-full border p-2 dark:bg-gray-700 dark:text-white dark:border-gray-600" @bind="washerQuote.OD">
            </div>
            <div>
                <label for="custMinSheet" class="mb-1 block text-xs dark:text-white">OD Plus</label>
                <input id="sheetThickness" type="number" min="0" class="w-full border p-2 dark:bg-gray-700 dark:text-white dark:border-gray-600" @bind="washerQuote.ODPlus">
            </div>
            <div>
                <label for="custMinSheet" class="mb-1 block text-xs dark:text-white">OD Minus</label>
                <input id="sheetThickness" type="number" min="0" class="w-full border p-2 dark:bg-gray-700 dark:text-white dark:border-gray-600" @bind="washerQuote.ODMinus">
            </div>
        </div>
        <div class="mb-2 grid grid-cols-3 gap-2">
            <div>
                <label for="custMinSheet" class="mb-1 block text-xs dark:text-white">Sanded Thickness</label>
                <input id="sheetThickness" type="number" min="0" class="w-full border p-2 dark:bg-gray-700 dark:text-white dark:border-gray-600" @bind="washerQuote.SandedThickness">
            </div>
