    private async Task AddToQuote()
    {
        isLoading = true;

        try
        {
            if(CustomerMaterialOnly || CustomMaterialOnly)
            {
                selectedGrade = grindQuotes.GradeDropdown;
                selectedDiameter = grindQuotes.DiameterDropdown.ToString();
                grindQuotes.CustomRodFullLength = FullRodLength;
                if(CustomFullRodLength > 0)
                {
                    FullRodLength = CustomFullRodLength;
                    grindQuotes.CustomRodFullLength = FullRodLength;
                }
            }
            var errors = await ErrorHandling();
            if (errors)
            {
                isLoading = false;
                return;
            }
            var connectionId = await JSRuntime.InvokeAsync<string>("getSignalRConnectionId");

            grindQuotes.Customer = Customer;
            var adjustedGrade = selectedGrade.Replace(" (Rolled)", "").Trim();

            // Add your logic here to populate sheetQuote as needed
            grindQuotes.GradeDropdown = adjustedGrade;
            grindQuotes.DiameterDropdown = decimal.Parse(selectedDiameter, CultureInfo.InvariantCulture);
            if (grindQuotes.DiameterDropdown == null)
            {
                grindQuotes.DiameterDropdown = int.Parse(selectedDiameter, CultureInfo.InvariantCulture);
            }

            //begin
            try
            {
                decimal lengthValue = (grindQuotes.Length - grindQuotes.LengthMinus) + 0.010M;
                List<ItemAttributes> stocks = new List<ItemAttributes>();
                ItemAttributes selectedItem = null;

                if (CustomerMaterialOnly || CustomMaterialOnly)
                {
                    if(CustomerMaterialOnly)
                    {
                        grindQuotes.ItemNo = "Customer Material";
                    }
                    if (CustomMaterialOnly)
                    {
                        grindQuotes.ItemNo = "Custom Material";
                    }
                }
                else
                {
                    if (!string.IsNullOrEmpty(grindQuotes.OverrideSku))
                    {
                        selectedItem = rodItemAttributes.Where(x => x.ItemNumber == grindQuotes.OverrideSku).FirstOrDefault();
                    }

                    if (selectedItem == null)
                    {

                        selectedItem = rodItemAttributes
                                            .Where(attr => attr.NEMAGrade == selectedGrade && attr.Thicknesses == selectedDiameter && attr.Color == selectedColor)
                                            .Where(attr => selectedGrade.Contains("(Rolled)") ? attr.Rolled == true : (attr.Rolled == false || attr.Rolled == null))
                                            .FirstOrDefault();
                    }
                    stocks.Add(selectedItem);
                    grindQuotes.ItemNo = selectedItem.ItemNumber;
                }

                var quantities = grindQuotes.Quantity.Split(new[] { ',' }, StringSplitOptions.RemoveEmptyEntries);
                foreach (var q in quantities)
                {
                    if (int.TryParse(q, out int qty))
                    {
                        var cutPiece = new CutPiece
                            {
                                Length = lengthValue,
                                Quantity = qty,
                                Diameter = Convert.ToDecimal(grindQuotes.DiameterDropdown),
                                ToleranceMinusLength = grindQuotes.LengthMinus,
                                TolerancePlusLength = grindQuotes.LengthPlus,
                                Grade = grindQuotes.GradeDropdown,
                                DiameterMinus = grindQuotes.GroundDiameterMinus,
                                DiameterPlus = grindQuotes.GroundDiameterPlus
                            };

                        //labor cost
                        var grinding = new GrindingCalculation(startingDiameter: grindQuotes.DiameterDropdown, finishDiameter: grindQuotes.GroundDiameter, lengthInches: grindQuotes.Length, rodQuantity: Convert.ToInt32(q), grindQuotes.GroundDiameterPlus);
                        decimal totalLabor = grinding.CalculateTotalLabor();
                        //stock cost
                        QuantityPricing stockpricing;
                        if (CustomerMaterialOnly || CustomMaterialOnly)
                        {
                            stockpricing = new QuantityPricing(Convert.ToInt32(grindQuotes.Quantity), CustomerPrice);
                        }
                        else
                        {
                            stockpricing = await transform.CalculatePricingForQuantitySimple(Convert.ToInt32(q), grindQuotes.ItemNo, Customer);
                        }


                        decimal totalStockPrice = 0.00M;
                        //rolled is priced as EA in BC
                        if (grindQuotes.ItemNo.StartsWith("RL") || grindQuotes.ItemNo.StartsWith("RG"))
                        {
                            if (grindQuotes.UOM == "FT")
                            {
                                var rodLengthInFeet = grindQuotes.CustomRodFullLength / (decimal)12.0;
                                var priceperfoot = stockpricing.PricePerItem / rodLengthInFeet;

                                totalStockPrice = priceperfoot * stockpricing.Quantity;
                            }
                            else
                            {
                                totalStockPrice = stockpricing.PricePerItem * stockpricing.Quantity;
                            }
                        }
                        //All others are priced as FT in BC
                        else
                        {
                            if (grindQuotes.UOM == "FT")
                            {
                                totalStockPrice = stockpricing.PricePerItem * stockpricing.Quantity;
                            }
                            else
                            {
                                var totalFt = grindQuotes.Length / 12.0m; // Convert length to feet
                                totalStockPrice = stockpricing.PricePerItem * totalFt * stockpricing.Quantity;
                            }
                        }

                        var totalprice = totalStockPrice + totalLabor;

                        // 1) Adjusted piece length (with tolerance and kerf)
                        decimal adjustedPieceLength = grindQuotes.Length
                                                      + grindQuotes.LengthPlus
                                                      + grindQuotes.Kerf;



                        // 2) Calculate the exact (decimal) pieces per 48" rod
                        decimal exactPiecesPerRod;
                        if (adjustedPieceLength > FullRodLength)
                        {
                            exactPiecesPerRod = FullRodLength + grindQuotes.LengthPlus + grindQuotes.Kerf;
                            exactPiecesPerRod = exactPiecesPerRod / adjustedPieceLength;
                        }
                        else
                        {
                            exactPiecesPerRod = FullRodLength / adjustedPieceLength;
                        }
                

                        // 3) Floor that value to get how many *whole* pieces you can actually cut from a rod
                        int integralPiecesPerRod = (int)Math.Floor(exactPiecesPerRod);

                        // 4) The Ideal Yield is how many full pieces can fit per rod in practice
                        decimal idealYield = integralPiecesPerRod;

                        // 5) Calculate total rods required based on the UOM
                        int totalQuantityRequested = Convert.ToInt32(q); // e.g., the "qty" from the loop
                        decimal totalRodsRequired;

                        if (grindQuotes.UOM == "EA")
                        {
                            // If UOM is "EA", divide requested quantity by the integer yield
                            // and ceiling to ensure any leftover pieces require an extra rod.
                            totalRodsRequired = Math.Ceiling(totalQuantityRequested / (decimal)integralPiecesPerRod);
                        }
                        else // UOM == "FT"
                        {
                            // If UOM is "FT", we consider the total length in feet requested
                            // vs. the adjusted piece length in feet (which includes tolerance & kerf).
                            decimal totalLengthFt = grindQuotes.Length / 12M;
                            decimal adjustedLengthFt = adjustedPieceLength / 12M;
                            totalRodsRequired = Math.Ceiling(totalLengthFt / adjustedLengthFt);
                        }

                        // Finally, fill out the GrindPricing object
                        var pricing = new GrindPricing
                            {
                                LaborCost = totalLabor,
                                StockPrice = stockpricing.PricePerItem,
                                Quantity = stockpricing.Quantity,
                                TotalPrice = totalprice,
                                PricePerItem = totalprice / Convert.ToInt32(q),
                                TotalStockPrice = totalStockPrice,
                                TotalRodsRequired = (int)totalRodsRequired,
                                IdealYield = (int)idealYield
                            };


 

                        grindQuotes.Pricing.Add(pricing);

                    } //end quantity if statement
                } //end foreach
                  //finish
                var result = grindQuotes;
                ResetOptions();
                isLoading = false;
                await CustomGrindOnAdd.InvokeAsync(result);
            }
            catch (Exception ex)
            {
                isLoading = false;
                StateHasChanged();
                await JSRuntime.InvokeVoidAsync("alert", ex.Message);
            }

        }
        catch (Exception ex)
        {
            isLoading = false;
            await JSRuntime.InvokeVoidAsync("alert", ex.Message);
        }
    }

