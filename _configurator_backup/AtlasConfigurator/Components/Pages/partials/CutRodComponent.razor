@code {
    public CutRodQuote cutRodQuotes = new CutRodQuote();
    [Parameter]
    public List<ItemAttributes> rodItemAttributes { get; set; }
    [Parameter]
    public string Customer { get; set; }
    [Parameter]
    public EventCallback<CutRodQuote> CutRodOnAdd { get; set; }

    string GradeDropdown { get; set; }
    string DiameterDropdown { get; set; }
    private bool isLoading = false;
    private bool DataLoading = false;

    private List<string> grades = new List<string>();
    private string selectedGrade = "";
    private List<string> thicknesses = new List<string>();
    private string selectedThickness = "";
    public List<QuantityPricing> quantityPricing = new List<QuantityPricing>();
    string toleranceColorLength = "";
    private decimal KerfData = 0.2M;
    private List<string> colors = new List<string>();
    private string selectedColor = "";



    protected override async Task OnInitializedAsync()
    {

        isLoading = true; // Data is loaded
        DataLoading = true;
        if (rodItemAttributes.Count <= 0)
        {
            rodItemAttributes = await transform.TransformBCItemAttributes("Rod");
        }
        grades = rodItemAttributes
            .Where(attr => attr.NEMAGrade != null && !string.IsNullOrEmpty(attr.LengthIn))
            .Select(attr => attr.NEMAGrade)
            .Distinct()
            .ToList();
        cutRodQuotes.LengthPlus = 0.06M;
        cutRodQuotes.LengthMinus = 0.06M;
        isLoading = false; // Data is loaded
        DataLoading = false;
        StateHasChanged();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {

        }
    }
    private async Task HandleGradeChange(ChangeEventArgs e)
    {
        selectedGrade = e.Value.ToString();
        cutRodQuotes.GradeDropdown = selectedGrade;

        var adjustedGrade = selectedGrade.Replace(" (Rolled)", "").Trim();
        selectedThickness = null;
        selectedColor = null;
        colors = new List<string>();
        thicknesses = new List<string>();

        thicknesses = rodItemAttributes
           .Where(attr => attr.NEMAGrade == selectedGrade && attr.Thicknesses != null)
           .Where(attr => selectedGrade.Contains("(Rolled)") ? attr.Rolled == true : (attr.Rolled == false || attr.Rolled == null))
           .Select(attr => attr.Thicknesses)
           .Distinct()
           .OrderBy(thickness => decimal.Parse(thickness, CultureInfo.InvariantCulture))
           .ToList();

        cutRodQuotes.Rolled = selectedGrade.Contains("(Rolled)") ? true : false;

    }
    private async Task HandleThicknessChange(ChangeEventArgs e)
    {

        selectedThickness = e.Value?.ToString();
        KerfData = await MaterialService.GetMaterialKerfByGradeThickness(cutRodQuotes.GradeDropdown, Convert.ToDecimal(selectedThickness));
        cutRodQuotes.Kerf = KerfData;
        cutRodQuotes.DiameterDropdown = Convert.ToDecimal(selectedThickness);
        // colors = rodItemAttributes
        //     .Where(attr => attr.NEMAGrade == selectedGrade && attr.Thicknesses == selectedThickness)
        //     .Select(attr => attr.Color)
        //     .Distinct()
        //     .ToList();

        colors = rodItemAttributes
.Where(attr => attr.NEMAGrade == selectedGrade && attr.Thicknesses == selectedThickness)
.Where(attr => selectedGrade.Contains("(Rolled)") ? attr.Rolled == true : (attr.Rolled == false || attr.Rolled == null))
.Select(attr => attr.Color)
.Distinct()
.ToList();
    }
    private async Task HandleColorChange(ChangeEventArgs e)
    {

        selectedColor = e.Value?.ToString();
        cutRodQuotes.Color = selectedColor;
    }

    public async Task<bool> ErrorHandling()
    {
        var validationMessages = new List<string>();

        if (string.IsNullOrEmpty(selectedGrade))
        {
            validationMessages.Add("- Grade");
        }
        if (string.IsNullOrEmpty(selectedThickness))
        {
            validationMessages.Add("- Thickness");
        }
        if (string.IsNullOrEmpty(Customer))
        {
            validationMessages.Add("- Customer");
        }
        if (cutRodQuotes.Length < 0.10M || cutRodQuotes.Length > 48)
        {
            validationMessages.Add("- Length must be > 0.10 and < 48");
        }
        if (string.IsNullOrEmpty(cutRodQuotes.Quantity))
        {
            validationMessages.Add("- Quantity");
        }
        else
        {
            var quantities = cutRodQuotes.Quantity.Split(new[] { ',' }, StringSplitOptions.RemoveEmptyEntries);
            foreach (var q in quantities)
            {
                if (!int.TryParse(q, out int qty))
                {
                    validationMessages.Add($"- Quantity '{q}' must be a number");
                    break;
                }
                if (int.TryParse(q, out int qtyAmt))
                {
                    if (qtyAmt > 1000)
                    {
                        validationMessages.Add($"- Quantity '{q}' must be 1000 or less");
                        break;
                    }
                }
            }
        }


        // Check if there are any missing fields
        if (validationMessages.Any())
        {
            // Construct the alert message
            string alertMessage = "Please complete the following fields before proceeding:\n" + string.Join("\n", validationMessages);
            // Display the alert to the user
            await JSRuntime.InvokeVoidAsync("alert", alertMessage);
            // Exit the method to prevent further execution
            return true;
        }
        return false;
    }

    private void ResetOptions()
    {
        selectedGrade = "";
        selectedThickness = "";
        thicknesses = new List<string>();
        grades = new List<string>();
        cutRodQuotes = new CutRodQuote();
        grades = rodItemAttributes
            .Where(attr => attr.NEMAGrade != null && !string.IsNullOrEmpty(attr.LengthIn))
            .Select(attr => attr.NEMAGrade)
            .Distinct()
            .ToList();
        cutRodQuotes.LengthPlus = 0.06M;
        cutRodQuotes.LengthMinus = 0.06M;
        colors = new List<string>();
        selectedColor = "";
        isLoading = false;
    }

    private async Task HandleOverrideChange(FocusEventArgs e)
    {
        var sku = cutRodQuotes.OverrideSku;
        var result = rodItemAttributes.Where(x => x.ItemNumber == sku).ToList();
        if (result.Count > 0)
        {
            selectedGrade = result.Select(x => x.NEMAGrade).FirstOrDefault();
            selectedThickness = result.Select(x => x.Thicknesses).FirstOrDefault().ToString();
            selectedColor = result.Select(x=>x.Color).FirstOrDefault();

            thicknesses.Clear();
            thicknesses = result.Select(x => x.Thicknesses).ToList(); //await MaterialService.GetThicknessesByGradeAsync(selectedGrade);

            cutRodQuotes.GradeDropdown = selectedGrade;
            cutRodQuotes.DiameterDropdown = decimal.Parse(selectedThickness, CultureInfo.InvariantCulture);
            cutRodQuotes.Color = selectedColor;

        }
    }

    private async Task AddToQuote()
    {
        isLoading = true;

        try
        {
            var errors = await ErrorHandling();
            if (errors)
            {
                isLoading = false;
                return;
            }
            var connectionId = await JSRuntime.InvokeAsync<string>("getSignalRConnectionId");

            cutRodQuotes.Customer = Customer;
            var adjustedGrade = selectedGrade.Replace(" (Rolled)", "").Trim();

            // Add your logic here to populate sheetQuote as needed
            cutRodQuotes.GradeDropdown = adjustedGrade;
            cutRodQuotes.DiameterDropdown = decimal.Parse(selectedThickness, CultureInfo.InvariantCulture);
            if (cutRodQuotes.DiameterDropdown == null)
            {
                cutRodQuotes.DiameterDropdown = int.Parse(selectedThickness, CultureInfo.InvariantCulture);
            }

            //begin
            try
            {
                decimal lengthValue = (cutRodQuotes.Length - cutRodQuotes.LengthMinus) + 0.010M;
                List<ItemAttributes> stocks = new List<ItemAttributes>();
                ItemAttributes selectedItem = null;
                if (!string.IsNullOrEmpty(cutRodQuotes.OverrideSku))
                {
                    selectedItem = rodItemAttributes.Where(x => x.ItemNumber == cutRodQuotes.OverrideSku).FirstOrDefault();
                }

                if (selectedItem == null)
                {

                    selectedItem = rodItemAttributes
                                        .Where(attr => attr.NEMAGrade == selectedGrade && attr.Thicknesses == selectedThickness && attr.Color == selectedColor)
                                        .Where(attr => selectedGrade.Contains("(Rolled)") ? attr.Rolled == true : (attr.Rolled == false || attr.Rolled == null))
                                        .FirstOrDefault();
                }

                stocks.Add(selectedItem);
                cutRodQuotes.ItemNo = selectedItem.ItemNumber;
                var quantities = cutRodQuotes.Quantity.Split(new[] { ',' }, StringSplitOptions.RemoveEmptyEntries);
                foreach (var q in quantities)
                {
                    if (int.TryParse(q, out int qty))
                    {
                        var cutPiece = new CutPiece
                            {
                                Length = lengthValue,
                                Quantity = qty,
                                Diameter = Convert.ToDecimal(cutRodQuotes.DiameterDropdown),
                                ToleranceMinusLength = cutRodQuotes.LengthMinus,
                                TolerancePlusLength = cutRodQuotes.LengthPlus,
                                Grade = cutRodQuotes.GradeDropdown
                            };
                        cutRodQuotes.Quantity = qty.ToString();
                        var returnData = await _helper.SetupCutRodPricing(cutPiece, Customer, cutRodQuotes, stocks, connectionId);


                        cutRodQuotes.Pricing.Add(returnData);

                    } //end quantity if statement
                } //end foreach
                  //finish
                var result = cutRodQuotes;
                ResetOptions();
                isLoading = false;
                await CutRodOnAdd.InvokeAsync(result);
            }
            catch (Exception ex)
            {
                isLoading = false;
                StateHasChanged();
                await JSRuntime.InvokeVoidAsync("alert", ex.Message);
            }

        }
        catch (Exception ex)
        {
            isLoading = false;
            await JSRuntime.InvokeVoidAsync("alert", ex.Message);
        }
    }
    
    private async Task HandleLegnthChange(FocusEventArgs e)
    {
        try
        {
            var length = cutRodQuotes.Length;

            
            bool isValidDivisor = _helper.IsDivisorOf48(length);
            if (isValidDivisor)
            {

                cutRodQuotes.LengthPlus = KerfData;
                cutRodQuotes.LengthMinus = KerfData;
                toleranceColorLength = "Red";
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            string alertMessage = "Length/Tolerance must not be 0";
            await JSRuntime.InvokeVoidAsync("alert", alertMessage);
        }

    }
   

}