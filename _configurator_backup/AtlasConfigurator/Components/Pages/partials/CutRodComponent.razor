                <div>
                    <label for="lengthMinus" class="mb-1 block text-xs dark:text-white">Length (-)</label>
                    <input id="lengthMinus" min="0.000" type="number" step="0.001" class="w-full border p-2 dark:bg-gray-700 dark:text-white dark:border-gray-600" style="color: @toleranceColorLength;" @bind="cutRodQuotes.LengthMinus">
                </div>
            </div>
            <!-- Assuming you're using this input for something, bind it if needed -->
            <input class="my-2 w-full border p-2 dark:bg-gray-700 dark:text-white dark:border-gray-600" placeholder="Quantity:" @bind="cutRodQuotes.Quantity">

