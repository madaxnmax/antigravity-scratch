                    <button onclick="@ResetOptions" class="mr-2 rounded bg-blue-700 px-4 py-1 font-bold text-white hover:bg-blue-800">RESET OPTIONS</button>
                </div>
            </div>
            <input class="my-2 w-full border p-2 dark:bg-gray-700 dark:text-white dark:border-gray-600" @onblur="HandleOverrideChange" placeholder="Input SKU:" @bind="rodQuotes.OverrideSku">
