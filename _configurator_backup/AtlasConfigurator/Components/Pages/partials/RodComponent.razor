@code {
    public RodQuote rodQuotes = new RodQuote();
    [Parameter]
    public List<ItemAttributes> rodItemAttributes  { get; set; }
    [Parameter]
    public string Customer { get; set; }
    [Parameter]
    public EventCallback<RodQuote> RodOnAdd { get; set; }
    private string selectedColor = "";
    private List<string> colors = new List<string>();

    string GradeDropdown { get; set; }
    string DiameterDropdown { get; set; }
    private bool isLoading = false;
    private bool DataLoading = false;

    private List<string> grades = new List<string>();
    private string selectedGrade = "";
    private List<string> thicknesses = new List<string>();
    private string selectedThickness = "";
    public List<QuantityPricing> quantityPricing = new List<QuantityPricing>();
    private string UOM = "";


    private List<string> validationMessages = new List<string>();

    protected override async Task OnInitializedAsync()
    {

        isLoading = true; // Data is loaded
        DataLoading = true;
        if (rodItemAttributes.Count <= 0)
        {
            rodItemAttributes = await transform.TransformBCItemAttributes("Rod");
        }
        grades = rodItemAttributes
            .Where(attr => attr.NEMAGrade != null && !string.IsNullOrEmpty(attr.LengthIn))
            .Select(attr => attr.NEMAGrade)
            .Distinct()
            .ToList();

        isLoading = false; // Data is loaded
        DataLoading = false;
        StateHasChanged();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {

        }
    }

    private async Task HandleGradeChange(ChangeEventArgs e)
    {
        selectedGrade = e.Value.ToString();
        rodQuotes.GradeDropdown = selectedGrade;
        //thicknesses = await MaterialService.GetThicknessesByGradeAsync(selectedGrade);
        //  thicknesses = rodItemAttributes
        //      .Where(attr => attr.NEMAGrade == selectedGrade && attr.Thicknesses != null)
        //      .Select(attr => attr.Thicknesses)
        //      .Distinct()
        // .OrderBy(thickness => decimal.Parse(thickness, CultureInfo.InvariantCulture))
        //      .ToList();
        // Remove "(Rolled)" from selectedGrade if it exists
        var adjustedGrade = selectedGrade.Replace(" (Rolled)", "").Trim();
        selectedThickness = null;
        selectedColor = null;
        colors = new List<string>();
        thicknesses = new List<string>();
        // Query with conditional filtering based on the presence of "(Rolled)"
        thicknesses = rodItemAttributes
           .Where(attr => attr.NEMAGrade == selectedGrade && attr.Thicknesses != null)
           .Where(attr => selectedGrade.Contains("(Rolled)") ? attr.Rolled == true : (attr.Rolled == false || attr.Rolled == null))
           .Select(attr => attr.Thicknesses)
           .Distinct()
           .OrderBy(thickness => decimal.Parse(thickness, CultureInfo.InvariantCulture))
           .ToList();

        rodQuotes.Rolled = selectedGrade.Contains("(Rolled)") ? true : false;
        if(rodQuotes.Rolled)
        {
            UOM = "EA";
        }
        else
        {
            UOM = "FT";
        }
        rodQuotes.UOM = UOM;

    }
    private async Task HandleColorChange(ChangeEventArgs e)
    {

        selectedColor = e.Value?.ToString();
        rodQuotes.Color = selectedColor;
    }
    private async Task HandleThicknessChange(ChangeEventArgs e)
    {

        selectedThickness = e.Value?.ToString();
        rodQuotes.DiameterDropdown = Convert.ToDecimal(selectedThickness);
        var adjustedGrade = selectedGrade.Replace(" (Rolled)", "").Trim();


        colors = rodItemAttributes
    .Where(attr => attr.NEMAGrade == selectedGrade && attr.Thicknesses == selectedThickness)
    .Where(attr => selectedGrade.Contains("(Rolled)") ? attr.Rolled == true : (attr.Rolled == false || attr.Rolled == null))
    .Select(attr => attr.Color)
    .Distinct()
    .ToList();
    }
    private async Task AddToQuote()
    {
        isLoading = true;
        try
        {
            var errors = await ErrorHandling();
            if (errors)
            {
                isLoading = false;
                return;
            }
            rodQuotes.Customer = Customer;
            // Add your logic here to populate sheetQuote as needed
            var adjustedGrade = selectedGrade.Replace(" (Rolled)", "").Trim();

            rodQuotes.GradeDropdown = adjustedGrade;
            rodQuotes.DiameterDropdown = decimal.Parse(selectedThickness, CultureInfo.InvariantCulture);
            ItemAttributes selectedItem = null;
            if (!string.IsNullOrEmpty(rodQuotes.OverrideSku))
            {
                selectedItem = rodItemAttributes.Where(x => x.ItemNumber == rodQuotes.OverrideSku).FirstOrDefault();
            }

            if(selectedItem == null)
            {               

                selectedItem = rodItemAttributes
                            .Where(attr => attr.NEMAGrade == selectedGrade && attr.Thicknesses == selectedThickness && attr.Color == selectedColor)
                            .Where(attr => selectedGrade.Contains("(Rolled)") ? attr.Rolled == true : (attr.Rolled == false || attr.Rolled == null))
                    .FirstOrDefault();
            }
            quantityPricing = await transform.CalculatePricingForQuantities(rodQuotes.Quantity, selectedItem.ItemNumber, Customer);
            //get pricing
            rodQuotes.ItemNo = selectedItem.ItemNumber;
            rodQuotes.Pricing = quantityPricing;

            var result = rodQuotes;
            ResetOptions();
            isLoading = false;
            await RodOnAdd.InvokeAsync(result);
        }
        catch (Exception ex)
        {
            isLoading = false;
            await JSRuntime.InvokeVoidAsync("alert", ex.Message);
        }

        // Optionally reset sheetQuote or update UI as needed after adding
    }

    public async Task<bool> ErrorHandling()
    {
        var validationMessagesError = new List<string>();

        if (string.IsNullOrEmpty(selectedGrade))
        {
            validationMessagesError.Add("- Grade");
        }
        if (string.IsNullOrEmpty(selectedThickness))
        {
            validationMessagesError.Add("- Thickness");
        }
        if (string.IsNullOrEmpty(Customer))
        {
            validationMessagesError.Add("- Customer");
        }
        if (string.IsNullOrEmpty(rodQuotes.Quantity))
        {
            validationMessagesError.Add("- Quantity");
        }
        else
        {
            var quantities = rodQuotes.Quantity.Split(new[] { ',' }, StringSplitOptions.RemoveEmptyEntries);
            foreach (var q in quantities)
            {
                if (!int.TryParse(q, out int qty))
                {
                    validationMessagesError.Add($"- Quantity '{q}' must be a number");
                    break;
                }
            }
        }
        ValidateQuantities();
        // Check if there are any missing fields
        if (validationMessagesError.Any() || validationMessages.Any())
        {
            foreach (var v in validationMessages)
            {
                validationMessagesError.Add(v);
            }
            // Construct the alert message
            string alertMessage = "Please complete the following fields before proceeding:\n" + string.Join("\n", validationMessagesError);
            // Display the alert to the user
            await JSRuntime.InvokeVoidAsync("alert", alertMessage);
            // Exit the method to prevent further execution
            return true;
        }
        return false;
    }

    private void ResetOptions()
    {
        selectedGrade = "";
        selectedThickness = "";
        thicknesses = new List<string>();
        grades = new List<string>();
        rodQuotes = new RodQuote();
        grades = rodItemAttributes
            .Where(attr => attr.NEMAGrade != null && !string.IsNullOrEmpty(attr.LengthIn))
            .Select(attr => attr.NEMAGrade)
            .Distinct()
            .ToList();
        isLoading = false;
        selectedColor = "";
        colors = new List<string>();
        UOM = "";
    }

    private async Task HandleOverrideChange(FocusEventArgs e)
    {
        var sku = rodQuotes.OverrideSku;
        var result = rodItemAttributes.Where(x => x.ItemNumber == sku).ToList();
        if (result.Count > 0)
        {
            selectedGrade = result.Select(x => x.NEMAGrade).FirstOrDefault();
            selectedThickness = result.Select(x => x.Thicknesses).FirstOrDefault().ToString();


            thicknesses.Clear();
            thicknesses = result.Select(x => x.Thicknesses).ToList(); //await MaterialService.GetThicknessesByGradeAsync(selectedGrade);

            rodQuotes.GradeDropdown = selectedGrade;
            rodQuotes.DiameterDropdown = decimal.Parse(selectedThickness, CultureInfo.InvariantCulture);

        }
    }

    private void ValidateQuantities()
    {
        try
        {
            validationMessages.Clear(); // Clear previous messages
            if (rodQuotes.Quantity.Any())
            {
                var quantities = rodQuotes.Quantity.Split(new[] { ',' }, StringSplitOptions.RemoveEmptyEntries);

                foreach (var q in quantities)
                {
                    if (!int.TryParse(q.Trim(), out int qty)) // Trim to remove any leading/trailing spaces
                    {
                        validationMessages.Add($"- Quantity '{q}' must be a number.");
                        continue; // Skip further checks for this item
                    }

                    // if (qty % 4 != 0)
                    // {
                    //     validationMessages.Add($"- Quantity '{q}' is not a multiple of 4.");
                    // }
                }
            }
        }
        catch (Exception ex)
        {
            validationMessages.Add($"- {ex.Message}");
        }
    }
